<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İsim Giriniz:"
        android:background="#FF8C1D"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:drawableLeft="@drawable/name"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="10dp"
        android:hint="Örnek:Erhan YILMAZ"/>


    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Adınızı Seçiniz:"
        android:background="#FF8C1D"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:layout_below="@+id/editTextName"
        android:drawableLeft="@drawable/kisi"/>

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="10dp"
        android:hint="Örnek:erhanyilmaz"/>


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parolanızı Seçiniz:"
        android:background="#FF8C1D"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:layout_below="@+id/editTextUserName"
        android:drawableLeft="@drawable/sifre"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="Parola"/>


    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Adresini Seçiniz:"
        android:background="#FF8C1D"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:layout_below="@+id/editTextPassword"
        android:drawableLeft="@drawable/eposta"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="10dp"
        android:hint="Örnek:erhanyilmaz1@hotmail.com"/>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="15dp"
        android:background="#0A97FF"
        android:layout_below="@id/editTextEmail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaten Kayıtlıysanız Giriş Yapınız.."
        android:textStyle="bold"
        android:layout_below="@+id/buttonRegister"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="15dp"
        android:background="#31FF16"
        android:layout_below="@id/buttonRegister"
        android:layout_marginTop="25dp"/>



</RelativeLayout><!-- From: file:/C:/Users/Ramaldis/Documents/AndroidStudioProjects/TabSwipe/app/src/main/res/layout/activity_main.xml -->