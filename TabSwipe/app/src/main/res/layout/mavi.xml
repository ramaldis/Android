<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İNTERNET GÜVENDE OLSUN"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Çocuklarınızın,Android aygıtlarını kullanarak nerede çevrimiçi olduklarını kontrol edin" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="260dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/tab3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Filtreleme ve engelleme ile webde gezinmek için hangi aygıtı kullandıklarından bağımsız olarak çocuklarınızı ziyaret ettiği sitelerin güvenli ve uygun olduğundan emin olabilirsiniz"
        android:id="@+id/textView12"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnMaviGec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="GEÇ"
        android:background="#FF0404"/>

</RelativeLayout>